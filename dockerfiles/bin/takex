#!/usr/bin/env bash
#
# consume sharedx

out() {
  echo "[TAKEX] $*"
}

while [ ! -e "/mnt/xauth/display" ] || [ ! -e "/mnt/xauth/.Xauthority" ]; do
  out "waiting for sharex ..."
  sleep 2
done

out "sharex delivered!"

export DISPLAY="localhost$(cat /mnt/xauth/display)"
cp /mnt/xauth/.Xauthority "$HOME/.Xauthority"

out "configured xorg access at: $HOME"

PROGRAM="$1"
shift

# launch the application
exec "$PROGRAM" $@