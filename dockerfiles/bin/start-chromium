#!/usr/bin/env bash
#
# start chromium

out() {
  echo "[START-CHROMIUM] $*"
}

out "launching URL: $KIOSK_URL"

/usr/bin/chromium-browser \
  --no-sandbox --disable-setuid-sandbox \
  --disable \
  --disable-translate \
  --disable-infobars \
  --disable-suggestions-service \
  --disable-save-password-bubble \
  --disk-cache-dir=/tmp/cache/ \
  --user-data-dir=/tmp/user_data/ \
  --start-maximized \
  --noerrdialogs \
  --kiosk "$KIOSK_URL"